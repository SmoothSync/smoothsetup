<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.smoothsync.smoothsetup"
          xmlns:android="http://schemas.android.com/apk/res/android">


    <uses-permission android:name="android.permission.INTERNET"/>
    <application>
        <activity
            android:name=".WizardActivity"
            android:excludeFromRecents="false"
            android:exported="false"
            android:theme="@style/SmoothSetupTheme">
        </activity>
        <activity
            android:name=".SmoothSetupDispatchActivity"
            android:excludeFromRecents="true"
            android:exported="true"
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW"></action>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"></category>

                <data
                    android:host="api.smoothsync.com"
                    android:pathPattern="/setup/.*"
                    android:scheme="https"/>

            </intent-filter>
        </activity>

        <receiver
            android:name=".InstallReferrerBroadcastReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>